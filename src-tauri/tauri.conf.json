{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Seer",
	"version": "0.1.4",
	"identifier": "codes.imran.seer",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/64x64.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/1024x1024.png",
			"icons/icon.icns",
			"icons/icon.ico",
			"icons/icon.png"
		],
		"macOS": {
			"signingIdentity": null,
			"dmg": {
				"windowSize": {
					"width": 660,
					"height": 400
				},
				"appPosition": {
					"x": 180,
					"y": 170
				},
				"applicationFolderPosition": {
					"x": 480,
					"y": 170
				}
			},
			"minimumSystemVersion": "10.15"
		}
	}
}
