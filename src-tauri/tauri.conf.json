{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Seer",
	"version": "0.1.0",
	"identifier": "codes.imran.seer",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Seer",
				"width": 800,
				"height": 600,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/128x128@2x.png", "icons/512x512.png"]
	}
}
