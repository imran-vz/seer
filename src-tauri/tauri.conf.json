{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Seer",
	"version": "0.1.0",
	"identifier": "codes.imran.seer",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/128x128@2x.png", "icons/512x512.png"],
		"macOS": {
			"dmg": {
				"windowSize": {
					"width": 660,
					"height": 400
				},
				"appPosition": {
					"x": 180,
					"y": 170
				},
				"applicationFolderPosition": {
					"x": 480,
					"y": 170
				}
			},
			"minimumSystemVersion": "10.15"
		}
	}
}
